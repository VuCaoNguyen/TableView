<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TableView.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="TableView" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <TableView>
            <TableRoot>
                <TableSection Title="Thông tin khách hàng">
                    <EntryCell Label="Name:"
								 Text="Nguyên"
								 Placeholder="Enter name"
								 Keyboard="Text" />
                    <EntryCell Label="Email:"
								 Text="nguyenabc@gmail.com"
								 Placeholder="Enter email address"
								 Keyboard="Email" />
                    <EntryCell Label="Phone:"
								 Text="+8431655412"
								 Placeholder="Enter phone number"
								 Keyboard="Telephone" />
                    <EntryCell Label="Age:"
								 Text="18"
								 Placeholder="Enter age"
								 Keyboard="Numeric" />

                    <SwitchCell Text="Female?" />
                </TableSection>
                <TableSection Title="Setting">
                    <SwitchCell Text="Dark Theme" />
                    <SwitchCell Text="Mute" On="true" />
                </TableSection>
            </TableRoot>
        </TableView>
    </StackLayout>

</ContentPage>
